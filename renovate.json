{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    ":separatePatchReleases"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["fhempy"],
      "automerge": true
    },
    {
      "matchPackageNames": ["python"],
      "matchUpdateTypes": ["patch"],
      "minimumReleaseAge": "2 days",
      "automerge": true
    },
    {
      "matchPackageNames": ["python"],
      "matchUpdateTypes": ["pin", "digest"],
      "automerge": true
    }
    
  ]
}
